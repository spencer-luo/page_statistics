{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#config": ["config.ts"],
      "#logger": ["logger.ts"],
      "#models/*": ["models/*"],
      "#routes/*": ["routes/*"],
      "#counter/*": ["counter/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "server.ts",
    "config.ts",
    "logger.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}